@{
	@model List<Post>
	ViewData["Title"] = ViewBag.Categories[(Model.First().CategoryId -1)].Name;                          
    
}

<!-- Page heading -->
	<div class="container p-t-4 p-b-40 mt-4">
		<h2 class="f1-l-1 cl2">
			@ViewBag.Categories[(Model.First().CategoryId -1)].Name
		</h2>
	</div>
			
	<!-- Feature post -->
@{
	var featuredPost = Model.OrderByDescending(p => p.Date).Take(5);

}
	<section class="bg0">
		<div class="container">
			<div class="row m-rl--1">

				<!-- Main post -->
				<div class="col-12 p-rl-1 p-b-2">
					<div class="bg-img1 size-a-3 how1 pos-relative" style="background-image: url(@featuredPost.FirstOrDefault().ImageUrl">
						<a asp-controller="Post" asp-action="Detail"
							asp-route-title=@featuredPost.FirstOrDefault().Title
							asp-route-content=@featuredPost.FirstOrDefault().Content
							asp-route-imageUrl=@featuredPost.FirstOrDefault().ImageUrl
							asp-route-categoryId=@featuredPost.FirstOrDefault().CategoryId
							asp-route-date=@featuredPost.FirstOrDefault().Date.ToString("MM/dd/yyyy")
							asp-route-id=@featuredPost.FirstOrDefault().Id
							class="dis-block how1-child1 trans-03"></a>

						<div class="flex-col-e-s s-full p-rl-25 p-tb-20">
							

							<h3 class="how1-child2 m-t-14 m-b-10">
								<a asp-controller="Post" asp-action="Detail"
									asp-route-title=@featuredPost.FirstOrDefault().Title
									asp-route-content=@featuredPost.FirstOrDefault().Content
									asp-route-imageUrl=@featuredPost.FirstOrDefault().ImageUrl
									asp-route-categoryId=@featuredPost.FirstOrDefault().CategoryId
									asp-route-date=@featuredPost.FirstOrDefault().Date.ToString("MM/dd/yyyy")
									asp-route-id=@featuredPost.FirstOrDefault().Id
									class="how-txt1 size-a-6 f1-l-1 cl0 hov-cl10 trans-03">
								@featuredPost.FirstOrDefault().Title
								</a>
							</h3>

							<span class="how1-child2">
								
								<span class="f1-s-3 cl11">
								@featuredPost.FirstOrDefault().Date.ToString("dddd, dd MMMM yyyy")
								</span>
							</span>
						</div>
					</div>
				</div>
				<!--  -->

				<!-- Other featured posts -->

			@foreach (var item in featuredPost.Skip(1))
			{
					<div class="col-sm-6 col-md-3 p-rl-1 p-b-2">
						<div class="bg-img1 size-a-14 how1 pos-relative" style="background-image: url(@item.ImageUrl);">
								<a asp-controller="Post" asp-action="Detail"
								asp-route-title=@item.Title
								asp-route-content=@item.Content
								asp-route-imageUrl=@item.ImageUrl
								asp-route-categoryId=@item.CategoryId
								asp-route-date=@item.Date.ToString("MM/dd/yyyy")
								asp-route-id=@item.Id
								class="dis-block how1-child1 trans-03"></a>

							<div class="flex-col-e-s s-full p-rl-25 p-tb-20">
								

								<h3 class="how1-child2 m-t-14">
									<a  asp-controller="Post" asp-action="Detail"
										asp-route-title=@item.Title
										asp-route-content=@item.Content
										asp-route-imageUrl=@item.ImageUrl
										asp-route-categoryId=@item.CategoryId
										asp-route-date=@item.Date.ToString("MM/dd/yyyy")
										asp-route-id=@item.Id
										class="how-txt1 size-h-1 f1-m-1 cl0 hov-cl10 trans-03">
										@item.Title
									</a>
								</h3>
							</div>
						</div>
					</div>	
			}

			<!--  -->

			</div>
		</div>
	</section>

	<!-- Post -->
@{
	var recentPost = Model.OrderByDescending(p => p.Date).Skip(5);

}
	<section class="bg0 p-t-110 p-b-25">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-10 col-lg-8 p-b-80">
					<div class="row">

					@foreach (var item in recentPost)
					{
								<!-- Column -->
							<div class="col-sm-6 p-r-25 p-r-15-sr991">
								<!-- Item -->
								<div class="p-b-53">
									<a asp-controller="Post" asp-action="Detail"
									asp-route-title=@item.Title
									asp-route-content=@item.Content
									asp-route-imageUrl=@item.ImageUrl
									asp-route-categoryId=@item.CategoryId
									asp-route-date=@item.Date.ToString("MM/dd/yyyy")
									asp-route-id=@item.Id
									class="wrap-pic-w hov1 trans-03">
										<img src="@item.ImageUrl" alt="IMG">
									</a>

									<div class="flex-col-s-c p-t-16">
										<h5 class="p-b-5 txt-center">
											<a asp-controller="Post" asp-action="Detail"
											asp-route-title=@item.Title
											asp-route-content=@item.Content
											asp-route-imageUrl=@item.ImageUrl
											asp-route-categoryId=@item.CategoryId
											asp-route-date=@item.Date.ToString("MM/dd/yyyy")
											asp-route-id=@item.Id
											class="f1-m-3 cl2 hov-cl10 trans-03">
												@item.Title
											</a>
										</h5>

										<div class="cl8 txt-center p-b-17">
											
											<span class="f1-s-3">
											@item.Date.ToString("dddd, dd MMMM yyyy")
											</span>
										</div>


										<a asp-controller="Post" asp-action="Detail"
										asp-route-title=@item.Title
										asp-route-content=@item.Content
										asp-route-imageUrl=@item.ImageUrl
										asp-route-categoryId=@item.CategoryId
										asp-route-date=@item.Date.ToString("MM/dd/yyyy")
										asp-route-id=@item.Id
										class="f1-s-1 cl9 hov-cl10 trans-03">
											Read More
											<i class="m-l-2 fa fa-long-arrow-alt-right"></i>
										</a>
									</div>
								</div>
							</div>	
					}


						


					</div>


					</div>

					@*<!-- Pagination -->
					<div class="flex-wr-c-c m-rl--7 p-t-28">
						<a href="#" class="flex-c-c pagi-item hov-btn1 trans-03 m-all-7 pagi-active">1</a>
						<a href="#" class="flex-c-c pagi-item hov-btn1 trans-03 m-all-7">2</a>
					</div>*@
				</div>

				
			</div>
		</div>
	</section>
